#include <stdio.h>
#define TRUE 1
#define FALSE 0
int main(void)
{
	char c, flag = FALSE, flag1 = FALSE, found = FALSE;
	int  i = 0, n = 0;
	while ((c = getchar()) != EOF)		
	{
		if (c >= 'A' && c <= 'Z' || c >= 'a' && c <= 'z')	
		{
			if (flag1 == FALSE)		
			{
				n++;			
				flag = TRUE;	
			}
			else	
			{
				i++;			
				flag = TRUE;
			}
		}
		else	
		{
			if (flag == TRUE)	
			{
				if (flag1 == FALSE)		
				{
					flag1 = TRUE;		
				}
				else	
				{
					if (n != i)		
					{
						found = TRUE;	
					}
				}
			}

			flag = FALSE;
			i = 0;
		}
	}
	
	if (found == TRUE)		
	{
		printf("Words are not the same lenght\n");	
	}
	else		
	{
		printf("Words of the same lenght\n");	
	}

	system("pause");
	return 0;
}

