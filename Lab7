#include<iostream>

using namespace std;

union S
{

    long int num;
    unsigned char s[4]; // байты s поверх числа num 
};

int main()

{

    long int num=100500;
    S ss;
    ss.num = num;
    for (int i = 0; i < 4; i++)
    
    {
        unsigned char res = 0;
        for (int j = 0; j < 8; j++)
        
        {
            res <<= 1;
            res |= (ss.s[i]>>j) & 0x01;
        }
        ss.s[i] = res;
    }
    
    num = ss.num;
    cout << hex<<num;
    
    system("pause");
    
    return 0;
    
}
